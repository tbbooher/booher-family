- model_class = ExpenseTracker::Vendor
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @vendor.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), expense_tracker_vendors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_tracker_vendor_path(@vendor), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_tracker_vendor_path(@vendor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
