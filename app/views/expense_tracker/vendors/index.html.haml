- model_class = ExpenseTracker::Vendor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @vendors.each do |vendor|
      %tr
        %td= link_to vendor.name, edit_expense_tracker_vendor_path(vendor)
        %td=l vendor.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_tracker_vendor_path(vendor), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_tracker_vendor_path(vendor), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_expense_tracker_vendor_path, :class => 'btn btn-primary'
