- model_class = ExpenseTracker::DailyExpense
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @daily_expense.amount
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @daily_expense.date
%p
  %strong= model_class.human_attribute_name(:vendor_id) + ':'
  %br
  = @daily_expense.vendor_id
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @daily_expense.category_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), expense_tracker_week_daily_expenses_path(@week), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_tracker_week_daily_expense_path(@week,@daily_expense), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_tracker_week_daily_expense_path(@week,@daily_expense), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
