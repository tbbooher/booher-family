- model_class = ExpenseTracker::Week
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:total_spent_cents)
      %th= model_class.human_attribute_name(:total_spent_currency)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @weeks.each do |week|
      %tr
        %td= link_to week.id, expense_tracker_week_path(week)
        %td= week.start_date
        %td= week.total_spent_cents
        %td= week.total_spent_currency
        %td=l week.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_expense_tracker_week_path(week), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), expense_tracker_week_path(week), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_expense_tracker_week_path, :class => 'btn btn-primary'
