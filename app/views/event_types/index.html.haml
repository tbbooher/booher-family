- model_class = EventType
- title 'Event Types'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @event_types.each do |event_type|
      %tr
        %td= link_to event_type.id, event_type_path(event_type)
        %td= event_type.name
        %td=l event_type.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_type_path(event_type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), event_type_path(event_type), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_event_type_path, :class => 'btn btn-primary'
