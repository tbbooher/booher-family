- title @user.name

= @user.description

%p= link_to "#{@user.name}'s Goals", user_goals_path(@user), class: 'btn'
%p= link_to "#{@user.lost_items.size} Lost Items", user_lost_items_path(@user), class: 'btn'
%p= link_to "Calendar", calendar_display_path(@user.id, Date.today.to_s(:for_cal)), class: 'btn'
%p= link_to "SonShip", user_sonship_classes_path(@user), class: 'btn'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
