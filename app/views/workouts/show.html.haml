- title "Workout"

%p
  %strong Workout Date:
  = @workout.workout_date
%p
  %strong Description:
  = @workout.description
%p
  %strong Power:
  = @workout.power
- if @workout.crossfit_workout
  %p
    %strong CrossfitWorkout:
    = link_to @workout.crossfit_workout.name, crossfit_workout_path(@workout.crossfit_workout)
%p
  %strong Mileage:
  = @workout.mileage

.form-actions
  = link_to "Back", user_workouts_path(@user), :class => 'btn'
  = link_to "Edit", edit_user_workout_path(@user, @workout), :class => 'btn'
  = link_to "Destroy", user_workout_path(@user, @workout), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
