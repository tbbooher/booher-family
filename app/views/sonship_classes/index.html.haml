- model_class = SonshipClass
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sonship_classes.each do |sonship_class|
      %tr
        %td= link_to sonship_class.start_date, user_sonship_class_path(@user,sonship_class)
        %td=l sonship_class.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_sonship_class_path(@user,sonship_class), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_sonship_class_path(@user, sonship_class), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_sonship_class_path(@user), :class => 'btn btn-primary'
