- model_class = TimeSlot
- title 'Time Slots'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:event_type_id)
      %th= model_class.human_attribute_name(:monday)
      %th= model_class.human_attribute_name(:tuesday)
      %th= model_class.human_attribute_name(:wednesday)
      %th= model_class.human_attribute_name(:thursday)
      %th= model_class.human_attribute_name(:friday)
      %th= model_class.human_attribute_name(:saturday)
      %th= model_class.human_attribute_name(:sunday)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:starts_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @time_slots.each do |time_slot|
      %tr
        %td= link_to time_slot.title, user_time_slot_path(@user, time_slot)
        %td= time_slot.event_type_id
        %td= time_slot.monday
        %td= time_slot.tuesday
        %td= time_slot.wednesday
        %td= time_slot.thursday
        %td= time_slot.friday
        %td= time_slot.saturday
        %td= time_slot.sunday
        %td= time_slot.user_id
        %td= time_slot.starts_at
        %td=l time_slot.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_time_slot_path(@user, time_slot), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_time_slot_path(@user, time_slot), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_time_slot_path(@user), :class => 'btn btn-primary'
