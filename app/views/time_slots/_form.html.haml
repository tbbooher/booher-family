= simple_form_for [@user, @time_slot], :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id, as: :hidden
  = f.input :title
  = f.association :event_type #, label_method: :name
  = f.input :monday
  = f.input :tuesday
  = f.input :wednesday
  = f.input :thursday
  = f.input :friday
  = f.input :saturday
  = f.input :sunday
  = f.input :starts_at
  = f.input :ends_at
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_time_slots_path(@user), :class => 'btn'
