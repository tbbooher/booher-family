- model_class = TimeSlot
- title "Time Slot: #{@time_slot.title}"

%p
  %strong= model_class.human_attribute_name(:event_type_id) + ':'
  %br
  = @time_slot.event_type_id
%p
  %strong= model_class.human_attribute_name(:monday) + ':'
  %br
  = @time_slot.monday
%p
  %strong= model_class.human_attribute_name(:tuesday) + ':'
  %br
  = @time_slot.tuesday
%p
  %strong= model_class.human_attribute_name(:wednesday) + ':'
  %br
  = @time_slot.wednesday
%p
  %strong= model_class.human_attribute_name(:thursday) + ':'
  %br
  = @time_slot.thursday
%p
  %strong= model_class.human_attribute_name(:friday) + ':'
  %br
  = @time_slot.friday
%p
  %strong= model_class.human_attribute_name(:saturday) + ':'
  %br
  = @time_slot.saturday
%p
  %strong= model_class.human_attribute_name(:sunday) + ':'
  %br
  = @time_slot.sunday
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @time_slot.user_id
%p
  %strong= model_class.human_attribute_name(:starts_at) + ':'
  %br
  = @time_slot.starts_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), user_time_slots_path(@user), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_time_slot_path(@user, @time_slot), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_time_slot_path(@user, @time_slot), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
