= simple_form_for @trip, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :start_date
  = f.input :end_date
  = f.input :description
  = f.input :budget
  = f.input :total_cost
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), trips_path, :class => 'btn'
