= simple_form_for [@sonship_lesson, @sonship_question], :html => { :class => 'form-horizontal' } do |f|
  = f.association :sonship_lesson
  = f.input :question
  = f.input :answer
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sonship_lesson_sonship_questions_path(@sonship_lesson), :class => 'btn'
