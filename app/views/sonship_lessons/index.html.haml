- model_class = SonshipLesson
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:goals)
      %th= model_class.human_attribute_name(:impact)
      %th= model_class.human_attribute_name(:memory_verse)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sonship_lessons.each do |sonship_lesson|
      %tr
        %td= link_to sonship_lesson.id, sonship_class_sonship_lesson_path(@sonship_class, sonship_lesson)
        %td= sonship_lesson.start_date
        %td= sonship_lesson.title
        %td= sonship_lesson.goals
        %td= sonship_lesson.impact
        %td= sonship_lesson.memory_verse
        %td=l sonship_lesson.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_sonship_class_sonship_lesson_path(@sonship_class, sonship_lesson), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), sonship_class_sonship_lesson_path(@sonship_class, sonship_lesson), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_sonship_class_sonship_lesson_path(@sonship_class), :class => 'btn btn-primary'
