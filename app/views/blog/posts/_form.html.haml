= simple_form_for [:blog, @post], :html => { :class => 'form-horizontal' } do |f|
  = f.association :tags
  = f.association :user, include_blank: false
  = f.input :title
  = f.input :body
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), blog_posts_path, :class => 'btn'
