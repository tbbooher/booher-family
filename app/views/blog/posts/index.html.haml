- title "Posts"

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th User
      %th Body
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.title, blog_post_path(post)
        %td= post.user.name if post.user
        %td= truncate(post.body, length: 50)
        %td=l post.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_post_path(post), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_blog_post_path, :class => 'btn btn-primary'
