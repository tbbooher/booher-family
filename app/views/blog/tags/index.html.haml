- title "Tags"

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tags.each do |tag|
      %tr
        %td= link_to tag.title, edit_blog_tag_path(tag)
        %td=l tag.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_tag_path(tag), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_tag_path(tag), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_blog_tag_path, :class => 'btn btn-primary'
