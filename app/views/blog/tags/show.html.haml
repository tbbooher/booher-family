- model_class = Tag
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @tag.title

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), blog_tags_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_tag_path(@tag), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_tag_path(@tag), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
