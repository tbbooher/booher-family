- model_class = Principle
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @principle.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @principle.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), principle_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_principle_path(@principle), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), principle_path(@principle), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
