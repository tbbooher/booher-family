- model_class = Principle
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @principles.each do |principle|
      %tr
        %td= link_to principle.id, principle_path(principle)
        %td= principle.name
        %td= principle.description
        %td=l principle.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_principle_path(principle), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), principle_path(principle), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_principle_path, :class => 'btn btn-primary'
