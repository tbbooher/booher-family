- model_class = Activity
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @activity.name
%p
  %strong= model_class.human_attribute_name(:location_id) + ':'
  %br
  = @activity.location_id
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @activity.description
%p
  %strong= model_class.human_attribute_name(:trip_day_id) + ':'
  %br
  = @activity.trip_day_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), activity_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_activity_path(@activity), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), activity_path(@activity), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
