= simple_form_for @activity, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :location_id
  = f.input :description
  = f.input :trip_day_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), activity_path, :class => 'btn'
