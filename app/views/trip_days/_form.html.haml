= simple_form_for [@trip, @trip_day], :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    = f.input :goal
    = f.input :day_date
    = f.input :lodging
    = f.input :lodging_link
    = f.input :notes, input_html: {style: "height:100%;" }
    = f.association :location
    %span.help-block= link_to "add location", new_location_path
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), trip_trip_days_path(@trip), :class => 'btn'
