- title "Trip Day #{@trip_day.day_date}"
%p
  %strong Goal:
  %br
  = @trip_day.goal

%p
  %strong Lodging:
  %br
  = link_to @trip_day.lodging, @trip_day.lodging_link
%p
  %strong Notes:
  %br
  = @trip_day.notes
%p
  %strong Location
  %br
  = @trip_day.location.name if @trip_day.location

= gmaps4rails(@trip_day.location.to_gmaps4rails) if @trip_day.location
=# gmaps("map_options" => { "detect_location" => true, "center_on_user" => true, "zoom" => 10},"markers" => { "data" => @trip_day.location.to_gmaps4rails }) if @trip_day.location
=# gmaps("map_options" => { "detect_location" => true, "center_on_user" => true, "auto_zoom" => false, "zoom" => 16},"markers" => { "data" => @json })
%p= link_to "Trip Meals", trip_trip_day_trip_meals_path(@trip, @trip_day)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), trip_trip_days_path(@trip), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_trip_trip_day_path(@trip, @trip_day), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), trip_trip_day_path(@trip, @trip_day), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
