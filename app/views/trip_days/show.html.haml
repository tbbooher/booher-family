- model_class = TripDay
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:day_date) + ':'
  %br
  = @trip_day.day_date
%p
  %strong= model_class.human_attribute_name(:lodging) + ':'
  %br
  = @trip_day.lodging
%p
  %strong= model_class.human_attribute_name(:lodging_link) + ':'
  %br
  = @trip_day.lodging_link
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @trip_day.notes
%p
  %strong= model_class.human_attribute_name(:location_id) + ':'
  %br
  = @trip_day.location_id
%p
  %strong= model_class.human_attribute_name(:goal) + ':'
  %br
  = @trip_day.goal

%p= link_to "Trip Meals", trip_trip_day_trip_meals_path(@trip, @trip_day)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), trip_trip_days_path(@trip), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_trip_trip_day_path(@trip, @trip_day), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), trip_trip_day_path(@trip, @trip_day), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
