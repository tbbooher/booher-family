- title "Expenses"

%table.table.table-striped
  %thead
    %tr
      %th Amount
      %th Payee
      %th Date
      %th Category
      %th Paid
      %th Created On
      %th Actions
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= link_to expense.amount, edit_expense_path(expense)
        %td= expense.payer_name.humanize
        %td= expense.date.strftime("%a, %e %b")
        %td= expense.category_name
        %td= expense.paid ? "true" : "false"
        %td= expense.created_at.strftime("%a, %e %b")
        %td
          = link_to 'destroy', expense_path(expense), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

%p
  = link_to 'New expense', new_expense_path, :class => 'btn btn-primary'
  = link_to "Settle up", "/expenses/settlement", class: "btn"


