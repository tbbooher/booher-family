.well#mileage_calculation{style: "display: none;"}
  = simple_form_for :mileage, :html => { :class => 'form-horizontal' } do |f|
    = f.input :mileage

= simple_form_for @expense, :html => { :class => 'form-horizontal' } do |f|
  = f.input :amount
  = f.input :date, as: :date
  = f.input :description
  = f.input :category, collection: Expense::CATEGORIES.map{|k,v| [v, k]}, include_blank: false
  = f.input :payer, collection: Expense::PAYERS.map{|k,v| [v.to_s.humanize, k]}, include_blank: false, label: "Payee"
  = f.input :paid
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), expenses_path, :class => 'btn'
