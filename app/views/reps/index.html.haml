- model_class = Rep
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:exercise_id)
      %th= model_class.human_attribute_name(:workout_id)
      %th= model_class.human_attribute_name(:count)
      %th= model_class.human_attribute_name(:seconds)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @reps.each do |rep|
      %tr
        %td= link_to rep.id, rep_path(rep)
        %td= rep.exercise_id
        %td= rep.workout_id
        %td= rep.count
        %td= rep.seconds
        %td=l rep.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_rep_path(rep), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), rep_path(rep), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_rep_path, :class => 'btn btn-primary'
