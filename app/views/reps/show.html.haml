- model_class = Rep
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:exercise_id) + ':'
  %br
  = @rep.exercise_id
%p
  %strong= model_class.human_attribute_name(:workout_id) + ':'
  %br
  = @rep.workout_id
%p
  %strong= model_class.human_attribute_name(:count) + ':'
  %br
  = @rep.count
%p
  %strong= model_class.human_attribute_name(:seconds) + ':'
  %br
  = @rep.seconds

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), reps_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_rep_path(@rep), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), rep_path(@rep), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
