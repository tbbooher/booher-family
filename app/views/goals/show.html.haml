- model_class = Goal

- title "Show #{@goal.name}"

%p
  %strong= model_class.human_attribute_name(:due_date) + ':'
  %br
  = @goal.due_date
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @goal.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), user_goals_path(@user), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_goal_path(@user, @goal), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_goal_path(@user, @goal), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
