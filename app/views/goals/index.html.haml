- model_class = Goal

- title 'Goals'

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:due_date)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @goals.each do |goal|
      %tr
        %td= link_to goal.name, user_goal_path(@user, goal)
        %td= goal.due_date
        %td= goal.description
        %td=l goal.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_goal_path(@user, goal), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_goal_path(@user, goal), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_goal_path(@user), :class => 'btn btn-primary'
