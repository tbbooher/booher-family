= simple_form_for [@user, @goal], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :due_date, as: :string, input_html: { data: {behaviour: :datepicker} }
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_goals_path, :class => 'btn'
