= simple_form_for [@trip, @trip_day, @trip_meal], :html => { :class => 'form-horizontal' } do |f|
  = f.input :meal, collection: TripMeal::MEALS.sort.map {|k,v| [v,k]}, include_blank: false
  = f.input :place
  = f.input :link
  = f.input :budget
  = f.input :trip_day_id, as: :hidden
  = f.association :location
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), trip_trip_day_trip_meals_path(@trip, @trip_day), :class => 'btn'
