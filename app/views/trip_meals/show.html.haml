- model_class = TripMeal
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:meal) + ':'
  %br
  = @trip_meal.meal
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @trip_meal.location
%p
  %strong= model_class.human_attribute_name(:link) + ':'
  %br
  = @trip_meal.link
%p
  %strong= model_class.human_attribute_name(:budget) + ':'
  %br
  = @trip_meal.budget
%p
  %strong= model_class.human_attribute_name(:trip_day_id) + ':'
  %br
  = @trip_meal.trip_day_id
%p
  %strong= model_class.human_attribute_name(:location_id) + ':'
  %br
  = @trip_meal.location_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), trip_trip_day_trip_meals_path(@trip, @trip_day), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_trip_trip_day_trip_meal_path(@trip, @trip_day, @trip_meal), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), trip_trip_day_trip_meal_path(@trip, @trip_day, @trip_meal), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
