- model_class = Event

- title "Events for #{@user.name}"

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:starts_at)
      %th= model_class.human_attribute_name(:ends_at)
      %th= model_class.human_attribute_name(:all_day)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:time_slot_id)
      %th= model_class.human_attribute_name(:event_type_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @events.each do |event|
      %tr
        %td= link_to event.title, user_event_path(@user, event)
        %td= event.starts_at
        %td= event.ends_at
        %td= event.all_day
        %td= event.description
        %td= event.time_slot_id
        %td= event.event_type_id
        %td= event.user_id
        %td=l event.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_event_path(@user, event), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_event_path(@user, event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_event_path(@user), :class => 'btn btn-primary'
