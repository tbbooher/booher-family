- title "#{@event.title} for #{@user.name}"

- model_class = Event

%p
  %strong= model_class.human_attribute_name(:starts_at) + ':'
  %br
  = @event.starts_at
%p
  %strong= model_class.human_attribute_name(:ends_at) + ':'
  %br
  = @event.ends_at
%p
  %strong= model_class.human_attribute_name(:all_day) + ':'
  %br
  = @event.all_day
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @event.description
%p
  %strong= model_class.human_attribute_name(:time_slot_id) + ':'
  %br
  = @event.time_slot_id
%p
  %strong= model_class.human_attribute_name(:event_type_id) + ':'
  %br
  = @event.event_type_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @event.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), user_events_path(@user), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_event_path(@user,@event), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_event_path(@user, @event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
