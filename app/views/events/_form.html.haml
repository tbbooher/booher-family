= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    = f.input :title
    = f.input :starts_at, as: :string,  input_html: {data: {'datepicker-format' => "dd/mm/yyyy hh:ii:ss"}}
    = f.input :ends_at, as: :string,  input_html: {data: {'datepicker-format' => "dd/mm/yyyy hh:ii:ss"}}
    = f.input :all_day
    = f.input :description
    = f.input :time_slot_id
    = f.input :event_type_id
    = f.input :user_id, as: :hidden
  .form-actions
    = f.button :submit, :class => 'btn-primary btn'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn'
