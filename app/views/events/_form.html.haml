= simple_form_for [@user, @event], :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    = f.input :title
    = f.input :starts_at
    = f.input :ends_at
    = f.input :all_day
    = f.input :description
    = f.input :time_slot_id
    = f.input :event_type_id
    = f.input :user_id, as: :hidden
  .form-actions
    = f.button :submit, :class => 'btn-primary btn'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_events_path(@user), :class => 'btn'
