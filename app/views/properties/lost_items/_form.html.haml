= simple_form_for [@user, @lost_item], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :user_id, as: :hidden
  = f.input :date_lost
  = f.input :description
  = f.input :priority
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_lost_items_path(@user), :class => 'btn'
