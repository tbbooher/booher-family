- model_class = LostItem

- title "#{@user.name}'s Lost Items"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Date Lost
      %th Description
      %th Priority
      %th Created At
      %th Actions
  %tbody
    - @lost_items.each do |lost_item|
      %tr
        %td= link_to lost_item.name, user_lost_item_path(@user, lost_item)
        %td= lost_item.date_lost
        %td= lost_item.description
        %td= lost_item.priority
        %td=l lost_item.created_at
        %td
          = link_to 'edit', edit_user_lost_item_path(@user, lost_item), :class => 'btn btn-mini'
          = link_to 'destroy', user_lost_item_path(@user, lost_item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'new', new_user_lost_item_path(@user), :class => 'btn btn-primary'
