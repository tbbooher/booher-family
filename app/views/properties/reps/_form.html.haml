= simple_form_for @rep, :html => { :class => 'form-horizontal' } do |f|
  = f.input :exercise_id
  = f.input :workout_id
  = f.input :count
  = f.input :seconds
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), reps_path, :class => 'btn'
