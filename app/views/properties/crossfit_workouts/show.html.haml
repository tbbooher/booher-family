- model_class = CrossfitWorkout
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @crossfit_workout.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @crossfit_workout.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), crossfit_workouts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_crossfit_workout_path(@crossfit_workout), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), crossfit_workout_path(@crossfit_workout), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
