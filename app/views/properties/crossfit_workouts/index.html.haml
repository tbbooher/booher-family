- title "CrossFit Workouts"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th Actions
  %tbody
    - @crossfit_workouts.each do |crossfit_workout|
      %tr
        %td= link_to crossfit_workout.name, crossfit_workout_path(crossfit_workout)
        %td= crossfit_workout.description
        %td
          = link_to 'Edit', edit_crossfit_workout_path(crossfit_workout), :class => 'btn btn-mini'
          = link_to 'Destroy', crossfit_workout_path(crossfit_workout), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'New', new_crossfit_workout_path, :class => 'btn btn-primary'
