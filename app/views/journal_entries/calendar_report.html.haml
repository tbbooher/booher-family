= calendar @events do |event|
  - if event.lack_of_discipline
    .calendar_report.discipline &nbsp;
  - if event.sick
    .calendar_report.sick &nbsp;
  - if event.workout
    .calendar_report.workout &nbsp;
  - if event.problem_attempted
    .calendar_report.problem_attempted &nbsp;
  - if event.flossed
    .calendar_report.flossed &nbsp;
  = event.friends_in_focus

.row
  #discipline.span2.offset1.well.discipline
    Lack of Discipline
  #sick.span2.well.sick
    Sick
  #workout.span2.well.workout
    Workout
  #problem_attempted.span2.well.problem_attempted
    Problem Attempted
  #flossed.span2.well.flossed
    %span.white Flossed
