- model_class = FamilyGoal
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:priority)
      %th= model_class.human_attribute_name(:above_cut)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:justification)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @family_goals.each do |family_goal|
      %tr
        %td= link_to family_goal.id, family_goal_path(family_goal)
        %td= family_goal.name
        %td= family_goal.priority
        %td= family_goal.above_cut
        %td= family_goal.description
        %td= family_goal.justification
        %td=l family_goal.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_family_goal_path(family_goal), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), family_goal_path(family_goal), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_family_goal_path, :class => 'btn btn-primary'
