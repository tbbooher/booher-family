- model_class = FamilyGoal
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @family_goal.name
%p
  %strong= model_class.human_attribute_name(:priority) + ':'
  %br
  = @family_goal.priority
%p
  %strong= model_class.human_attribute_name(:above_cut) + ':'
  %br
  = @family_goal.above_cut
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @family_goal.description
%p
  %strong= model_class.human_attribute_name(:justification) + ':'
  %br
  = @family_goal.justification

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), family_goals_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_family_goal_path(@family_goal), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), family_goal_path(@family_goal), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
